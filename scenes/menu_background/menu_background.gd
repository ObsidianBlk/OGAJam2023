extends CanvasLayer

# ------------------------------------------------------------------------------
# Variables
# ------------------------------------------------------------------------------
var _seed : float = 1.0


# ------------------------------------------------------------------------------
# Onready Variables
# ------------------------------------------------------------------------------
@onready var _hell_planet : Control = $Planet/HellPlanet

# ------------------------------------------------------------------------------
# Override Methods
# ------------------------------------------------------------------------------
func _ready() -> void:
	_hell_planet.planet_seed = _seed

# ------------------------------------------------------------------------------
# Public Methods
# ------------------------------------------------------------------------------
func set_seed(s : float) -> void:
	_seed = s
	if _hell_planet != null:
		_hell_planet.planet_seed = _seed
